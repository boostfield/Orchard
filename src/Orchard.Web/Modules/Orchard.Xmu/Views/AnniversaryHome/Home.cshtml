<script>
   
$(function(){
    $('#news-ticker').newsTicker({
        row_height: 22,
        max_rows: 17,
        speed: 500,
        direction: 'up',
        duration: 2000,
        autostart: 1,
        pauseOnHover: 1
    });
    var $frame = $('#crazy');
    var $slidee = $frame.children('ul').eq(0);
    var $wrap = $('.photo-gallery');

    // Call Sly on frame
    $frame.sly({
        horizontal: 1,
        itemNav: 'basic',
        smart: 1,
        activateOn: 'click',
        mouseDragging: 1,
        touchDragging: 1,
        releaseSwing: 1,
        startAt: 0,
        
        scrollBy: 1,
        
        activatePageOn: 'click',
        speed: 300,
        elasticBounds: 1,
        
        dragHandle: 1,
        dynamicHandle: 1,
        clickBar: 1,

        cycleBy: 'page',
        cycleInterval: 1000,
        pauseOnHover: 1,
        startPaused: 1,
        // Buttons
        forward: $wrap.find('.btn-forward'),
        backward: $wrap.find('.btn-backward'),
       
    });
});

</script>
