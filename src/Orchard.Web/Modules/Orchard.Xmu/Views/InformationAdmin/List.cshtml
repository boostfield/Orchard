@model Orchard.Xmu.ViewModels.ItemListViewModel

@using (Html.BeginFormAntiForgeryPost(Url.Action("List", new { controller = "InformationAdmin", area = "Orchard.Xmu" }), FormMethod.Get))
{
    <label for="search-text">@T("Search")</label>
    @Html.TextBox("searchText", Model.SearchText, new { @class = "text medium", autofocus = "autofocus" })
    <button type="submit">@T("Search")</button>

    <fieldset class="bulk-actions">
        <label for="filterResults" class="bulk-filter">资讯类型</label>
        <select id="filterResults" name="selectedTermId">
            @Html.SelectOption(Model.SelectedTermId, -1, "所有类型")
             @foreach(var term in Model.Terms)
            {
                @Html.SelectOption(Model.SelectedTermId, term.Id, term.Name);
            }
        </select>
    </fieldset>


    <fieldset class="contentItems bulk-items">
        @Display(Model.ViewModel.ContentItems)
    </fieldset>

    if (HasText(Model.SearchText) && Model.ViewModel.ContentItems.Items.Count == 0)
    {
        @T("There are no results")
    }

    @Display(Model.Pager)

}

