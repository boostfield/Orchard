@model Orchard.Xmu.Models.CNTeacherPart
@{ 
    Style.Require("Select2");
    Script.Require("Course").AtHead();
}

<fieldset>
    @Html.LabelFor(m => m.Number)
    @Html.TextBoxFor(m => m.Number)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Rank)
    @Html.TextBoxFor(m => m.Rank)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Education)
    @Html.TextBoxFor(m => m.Education)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Job)
    @Html.TextBoxFor(m => m.Job)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Resfield)
    @Html.TextAreaFor(m => m.Resfield)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Tecoffice)
    @Html.TextBoxFor(m => m.Tecoffice)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Office)
    @Html.TextBoxFor(m => m.Office)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Telephone)
    @Html.TextBoxFor(m => m.Telephone)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Introduce)
    @Html.TextAreaFor(m => m.Introduce)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Department)
    @Html.TextBoxFor(m => m.Department)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Birthday)
    @Html.TextBoxFor(m => m.Birthday,
           new { @type = "date", @Value = Model.Birthday != null ? Model.Birthday.Value.ToString("yyyy-MM-dd") : "" })
