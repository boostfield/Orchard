<fieldset>
    @Html.LabelFor(m => m.Concept)
    @Html.TextAreaFor(m => m.Concept)
</fieldset>
<fieldset>
    @Html.LabelFor(m => m.Publication)
    @Html.TextAreaFor(m => m.Publication)
</fieldset>
