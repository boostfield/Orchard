    function viewmypic(mypic, imgfile) {
        if (imgfile.value) {
            mypic.src = imgfile.value;
            
        }
    }
    function changeUserName() {
        var newUserName = document.getElementById("account-username").value;
        if (newUserName != null && newUserName.length > 1) {
            $.ajax({
                url: '/api/manager/ChangeUsername',
                data: { "username": newUserName },
                type: 'get',
                dataType: 'json',
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                success: function (data) {
                    if (data) {
                        alert("修改用户名成功");
                    } else {
                        alert("修改用户名失败，已存在该用户名");
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                    alert("修改用户名失败");
                }
            });
        } else {
            alert("用户名格式不正确");
        }
    }
    function changePassword() {
        var oldPassword = document.getElementById("account-oldpassword").value;
        var newPassword = document.getElementById("account-newpassword").value;
        var confirmPassword = document.getElementById("account-repeatpassword").value;
        if (newPassword != null && newPassword.length >= 7) {
            if (newPassword == confirmPassword) {
                $.ajax({
                    url: '/api/manager/ChangePassword',
                    data: { "currentPassword": oldPassword, 'newPassword': newPassword },
                    type: 'get',
                    dataType: 'json',
                    contentType: "application/x-www-form-urlencoded; charset=utf-8",
                    success: function (data) {
                        if (data) {
                            alert("修改密码成功");
                        } else {
                            alert("修改密码失败");
                        }
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert("修改密码失败");
                    }
                });
            } else {
                alert("两次密码输入不一致");
            }
            
        } else {
            alert("密码长度必须大于7位");
        }
    }
</script>

