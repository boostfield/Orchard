@using Orchard.Mvc.Html;

@{
    var siteName = Convert.ToString(WorkContext.CurrentSite.SiteName);

    var title = Model.Title + WorkContext.CurrentSite.PageTitleSeparator + siteName;

<!DOCTYPE html>
<html lang="@WorkContext.CurrentCulture">
<head>
    
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="Boostfield">
    <meta name="renderer" content="webkit">
    <title>厦门大学法学院</title>
    <link rel="shortcut icon" href="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Content/images/favicon.ico"))" />

    @{



        Style.Include("bootstrap.min.css");
        Style.Include("Site.css");
        Script.Include("//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")
        .AtHead()
        .UseCondition("lt ie 9");

        Script.Include("//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js")
        .AtHead()
        .UseCondition("lt ie 9");
        Script.Include("jquery1.min.js").AtHead();
        Script.Include("bootstrap.min.js").AtHead();
        Script.Include("jquery.bootpag.min.js").AtHead();

    }
    

    @Display(Model.Head)
</head>
<body class="text-justify">
    @Display(Model.Body)
    @Display(Model.Tail)
</body>
</html>