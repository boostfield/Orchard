@using Orchard.Mvc.Html;
@{
    var siteName = Convert.ToString(WorkContext.CurrentSite.SiteName);
    var title = Model.Title + WorkContext.CurrentSite.PageTitleSeparator + siteName;
}
<!DOCTYPE html>
<html lang="@WorkContext.CurrentCulture">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="author" content="Boostfield">
    <meta name="renderer" content="webkit">
    <meta name="baidu-site-verification" content="koZUMBCHGx" />
    <title>厦门大学法学院</title>
    <link rel="shortcut icon" href="@Url.Content(Html.ThemePath(WorkContext.CurrentTheme, "/Content/images/favicon.ico"))" />

    @{

        Style.Include("bootstrap.min.css");
        Style.Include("Site.css");
        Style.Include("ie8").UseCondition("lt ie 9");

        Script.Include("jquery1.min.js").AtHead();
        Script.Include("bootstrap.min.js").AtHead();
        Script.Include("jquery.bootpag.min.js").AtHead();
        Script.Include("ie-bootstrap-carousel.min.js").AtFoot().UseCondition("lt ie 9");

        Script.Include("html5shiv.min.js").AtHead().UseCondition("lt ie 9");
        Script.Include("respond.min.js").AtHead().UseCondition("lt ie 9");

    }
    

    @Display(Model.Head)
</head>
<body class="text-justify">
    @Display(Model.Body)
    @Display(Model.Tail)
    <script>
        if (document.addEventListener) {
            console.log("fine browser version");
        } else {
            alert("请使用IE9以上版本的浏览器获取更好的体验效果");
        }
    </script>
</body>

</html>