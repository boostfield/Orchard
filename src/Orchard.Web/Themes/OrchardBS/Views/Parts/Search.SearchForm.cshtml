@using Orchard.Search.ViewModels;

@{
    Style.Require("Search");
}


@using (Html.BeginForm("index", "search", new {area = "Orchard.Search"}, FormMethod.Get, new {@class = "search-form"}))
{
    <fieldset>
        @Html.TextBox("q", (SearchViewModel) Model.ViewModel.Query, new{ @class="form-control input input-sm" })
        <br/>
        <br/>
        <button class="btn btn-primary btn-sm" type="submit">@T("Search")</button>
    </fieldset>
}