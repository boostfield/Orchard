@using Orchard.ContentManagement

@{
    Layout.Title = Html.TitleForPage(T("LogOn")).ToString();
}

@{
    var userCanRegister = WorkContext.CurrentSite.As<Orchard.Users.Models.RegistrationSettingsPart>().UsersCanRegister;
    var enableLostPassword = WorkContext.CurrentSite.As<Orchard.Users.Models.RegistrationSettingsPart>().EnableLostPassword;
}
<div class="container logreg text-center">
    <h3>登录后台管理系统</h3>
    
    <div class="row center-block">
        
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <hr />
            @using (Html.BeginFormAntiForgeryPost(Url.Action("LogOn", new { ReturnUrl = Request.QueryString["ReturnUrl"] }), FormMethod.Post, new { @class = "form-horizontal" }))
            {

                @Html.ValidationSummary(T("Login was unsuccessful. Please correct the errors and try again.").ToString())
        <!-- Username -->
                <div class="form-group">


                    @Html.TextBox("userNameOrEmail", "", new { id = "username-email", placeholder = "用户名", @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessage("userNameOrEmail")

                </div>
        <!-- Password -->
                <div class="form-group">

                   
                        @Html.Password("password", string.Empty, new { placeholder = "密码", @class = "form-control" })
                        @Html.ValidationMessage("password")
                   
                </div>
                <div class="form-group">

                    <div class="checkbox">
                        <label>
                            @Html.CheckBox("rememberMe", new { id = "remember-me" })
                            记住我
                        </label>
                    </div>

                </div>
                <div class="form-group">

                    <button type="submit" class="btn btn-primary">登录</button>


                </div>
            }
            @if (userCanRegister)
            {
                <hr />
                <div class="lregister">
                    Don't have Account? @Html.ActionLink(T("Register").Text, "Register")<br />
                    @if (enableLostPassword)
                    { @Html.ActionLink(T("Lost your Password?").Text, "RequestLostPassword") }
                </div>
            }
        </div>
        <div class="col-md-4">
        </div>
    </div>
    
</div>